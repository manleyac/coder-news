datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id          Int        @default(autoincrement()) @id
  createdAt   DateTime   @default(now())
  title       String
  content     String?
  authorId    Int?
  author      User?       @relation(fields: [authorId], references: [id])
  
}

model User {
  id          Int      @default(autoincrement()) @id
  username    String   @unique
  password    String
  posts       Post[]
}